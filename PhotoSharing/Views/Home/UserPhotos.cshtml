@model PhotoSharing.Models.UserPhotoViewModel

<script src="@Url.Content("~/Scripts/JS/MoalContainerLoad.js")" type="text/javascript"></script>
<div id="userPhotosContent">
    <div id="Photos">
        <div class="Module UserProfileContent">
            <div class="Module UserProfileFollowingGrid">
                <div class="Grid Module">
                    <div class="GridItems Module centeredWithinWrapper denzelPrimeEnabled fixedHeightLayout padItems">
                        @foreach (var photoByUserId in Model.PhotosByUserId_Result)
                        {
                            <div class="item ui-draggable ui-draggable-disabled ui-state-disabled PhotosTopMargin" aria-disabled="true">
                                <div class="Interest Module followingOneClickView size11" style="padding-right: 12px; padding-bottom: 24px; padding-left: 12px; padding-top: 24px;">
                                    <div class="overflowMask hidden">
                                        <div class="mask">
                                            <span class="text ">...</span>
                                        </div>
                                    </div>
                                    <div class="interestMaskAndWrapper">
                                        
                                        <a data-lightbox="userPhotos" href="@Url.Action("RetrievePhoto", "Profile", new { profilePicId = photoByUserId.PhotoFileID })" photoId="@((photoByUserId.PhotoOwner != null && photoByUserId.PhotoOwner == true)?photoByUserId.PhotoFileID : 0)" userId="@Model.UserId" title="@((photoByUserId.PhotoOwner != null && photoByUserId.PhotoOwner == true) ? ((photoByUserId.Description != null)?photoByUserId.Description : ""):((photoByUserId.Description != null)? "Shared (" + photoByUserId.OwnerName+") : "+ photoByUserId.Description : "Shared (" + photoByUserId.OwnerName+") : " +""))" class="interestWrapper" style="width:auto !important">
                                            
                                            <img src="@Url.Action("RetrievePhoto", "Profile", new { profilePicId = photoByUserId.PhotoFileID })" />
                                        </a>
                                        @if(Model.UserId == photoByUserId.UploadedUserId)
                                        { 
                                        <a class="InterestFollowButton PhotosShareBtn  modal-link" href="@Url.Action("SharePhoto", "Home", new { sharePhotoId = photoByUserId.PhotoFileID })">
                                            <img src="~/Content/Images/ShareIcon.png" id="imgSharebtn" />
                                            
                                        </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
