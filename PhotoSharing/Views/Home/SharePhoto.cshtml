@model PhotoSharing.Models.ShareUserPhotoViewModel

<div class="modal-body UserEdit">
    <script src="@Url.Content("~/Scripts/JS/MoalContainerLoad.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JS/AutoComplete.js")" type="text/javascript"></script>

    @using (Html.BeginForm("SharePhoto", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-horizontal">
            <h4>Share Image</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div id="uploadedImgContainer">
                    <div class="row">
                        <div class="col-md-12" style="text-align:center">
                            <div>
                                <img id="shareImg" src="@Url.Action("RetrievePhoto", "Profile", new { profilePicId = Model.SharedPhotoId })" alt="" style="min-width: 250px !important; max-height: 250px !important; border-radius:6px !important" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group row" style="padding-top:20px; height:200px">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SearchUser, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.SearchUser, new { htmlAttributes = new { @class = "form-control",@id ="searchShareUser",@style="min-width:100%" } })
                    @Html.ValidationMessageFor(model => model.SearchUser, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group row" style="padding-top:20px; display:none">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SharedPhotoId, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.SharedPhotoId, new { htmlAttributes = new { @class = "form-control", @id = "searchShareUser" } })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-3">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>
                </div>
                <div class="col-md-3">
                    <button type="submit" id="sharePhoto-btn" class="btn btn-danger">
                        Share
                    </button>
                </div>
            </div>
        </div>
    }
</div>
